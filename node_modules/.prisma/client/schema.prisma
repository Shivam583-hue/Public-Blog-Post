// Define your database provider as PostgreSQL in the datasource block
datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL") // Ensure DATABASE_URL is updated for PostgreSQL
}

generator client {
  provider = "prisma-client-js"
}

// Define the User model
model User {
  id                         Int       @id @default(autoincrement()) // Unique identifier
  username                   String    @db.VarChar(255)
  email                      String    @unique @db.VarChar(255)
  password                   String    @db.VarChar(255)
  lastLogin                  DateTime? @default(now())
  isVerified                 Boolean   @default(false)
  resetPasswordToken         String?   @db.VarChar(255) // Make nullable for optional tokens
  resetPasswordExpiresAt     DateTime?
  verificationToken          String?   @db.VarChar(255) // Make nullable for optional tokens
  verificationTokenExpiresAt DateTime?
  createdAt                  DateTime  @default(now()) // Timestamp equivalent
  updatedAt                  DateTime  @updatedAt // Auto-updates timestamp

  @@map("UserModel") // Optional: maps to MongoDBâ€™s model name if desired
}
